	        int computerInput = rnd.nextInt(3) + 1;
			
			if(userInput == 1 && computerInput == 2) {
				
			}
			
		} catch(Exception e) {
			System.out.println("Invalid input!! Please enter valid input");
		} finally {
			scanner.close();
		}

	}

